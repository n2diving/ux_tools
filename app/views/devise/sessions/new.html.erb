<div class="mx-auto text-center">
  <div class="row">
    <div class="col-12 text-center">
      <h2 class="margin-bottom-md">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, class: "form-control margin-bottom-md", autofocus: true, placeholder: "Email" %>
        <%= f.password_field :password, class: "form-control margin-bottom-md", autocomplete: "off", placeholder: "Password" %>

        <div class="form-check margin-bottom-md">
          <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label' %>
          <% end -%>
        </div>

        <%= f.submit "Log in", class: "btn btn-primary margin-bottom-md" %>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>