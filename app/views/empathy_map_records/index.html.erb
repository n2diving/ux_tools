<div class="mx-auto text-center">
  <div class="row">
    <div class="col-12 text-center">
      <h2 class="margin-bottom-md">Empathy map records</h2>
      <p id="notice"><%= notice %></p>

      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Empathy map</th>
            <th scope="col">Record Type</th>
            <th scope="col">Group</th>
            <th scope="col">Position</th>
            <th scope="col">Text</th>
            <th scope="col" colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @empathy_map_records.each_with_index do |empathy_map_record, index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= empathy_map_record.empathy_map.name %></td>
              <td><%= empathy_map_record.record_type %></td>
              <td><%= empathy_map_record.group %></td>
              <td><%= empathy_map_record.position %></td>
              <td><%= empathy_map_record.text %></td>
              <td><%= link_to 'Show', empathy_map_record %></td>
              <td><%= link_to 'Edit', edit_empathy_map_record_path(empathy_map_record) %></td>
              <td><%= link_to 'Destroy', empathy_map_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Empathy Map Record', new_empathy_map_record_path %>

    </div>
  </div>
</div>
